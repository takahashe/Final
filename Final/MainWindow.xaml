<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="Final.MainWindow"
        Title="MainWindow" Height="480" Width="640" Closing="Close">
  <Grid>
    <Image x:Name="rgbImage" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></Image>
    <Canvas x:Name="skeletonCanvas" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></Canvas>
    <Grid x:Name="initialWindow" Background="#e0000000" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
      <Button x:Name="startButton" Height="50" Width="100" FontSize="20">Start</Button>
    </Grid>
    <Canvas>
      <Button x:Name="stopButton" Opacity="0">
        <Button.Template>
          <ControlTemplate>
            <Ellipse Height="80" Width="80" Fill="Red"></Ellipse>
          </ControlTemplate>
        </Button.Template>
      </Button>
    </Canvas>
  </Grid>
</Window>
